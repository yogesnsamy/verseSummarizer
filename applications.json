[{
    "name": "Widget Samples",
    "title": "Widget Samples",
    "description": "This samples demonstrates using the widget extension point",
    "extensions": [{
        "name": "Person Action Sample",
        "type": "com.ibm.verse.ext.widget",
        "payload": {
          "url": "${extensionPath}/samples/actions.html",
          "features": ["core"],
          "actions": [{
              "id": "com.ibm.verse.ext.person.action",
              "object": "com.ibm.appreg.object.person",
              "text": "Person Action",
              "title": "Person Action",
              "location": "window",
              "renderParams": {
                "width": "900",
                "height": "800"
              }
            },
            {
              "id": "com.ibm.verse.ext.mail.compose.action",
              "path": "mail.compose",
              "text": "Mail Compose Action",
              "title": "Mail Compose Action",
              "location": "tab"
            },
            {
              "id": "com.ibm.verse.ext.mail.read.action",
              "path": "mail.read",
              "text": "Verse Summarizer",
              "title": "Verse Summarizer",
              "location": "window",
              "renderParams": {
                "width": "580",
                "height": "700"
              }
            }
          ]
        }
      },
      {
        "type": "com.ibm.verse.ext.namePicker",
        "name": "Custom name picker in mail compose",
        "url": "${extensionPath}/custom-name-picker/index.html",
        "title": "Add Contact"
      }
    ],
    "services": [
      "Verse"
    ]
  },
  {
    "name": "Widget Samples",
    "title": "Widget Samples",
    "description": "This samples demonstrates using the widget extension point",
    "extensions": [{
        "name": "Person Action Sample",
        "type": "com.ibm.verse.ext.widget",
        "payload": {
          "url": "${extensionPath}/samples/templatedLink.html",
          "features": ["core"],
          "actions": [{
              "id": "com.ibm.verse.ext.person.action",
              "object": "com.ibm.appreg.object.person",
              "text": "Verse Summarizer Mail Summary",
              "title": "Verse Summarizer Mail Summary",
              "location": "window",
              "renderParams": {
                "width": "1000",
                "height": "600"
              }
            }                        
          ]
        }
      },
      {
        "type": "com.ibm.verse.ext.namePicker",
        "name": "Custom name picker in mail compose",
        "url": "${extensionPath}/custom-name-picker/index.html",
        "title": "Add Contact"
      }
    ],
    "services": [
      "Verse"
    ]
  }
]